<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuickCash"
        tools:targetApi="31">

        <!-- Main Activity (Launcher) -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity android:name=".ui.LoginActivity"
            android:exported="true" />

        <!-- Create Account Activity (Added this) -->
        <activity android:name=".ui.CreateAccount"
            android:exported="true" />

        <!-- Reset Password Activity -->
        <activity android:name=".ui.ResetPasswordActivity"
            android:exported="true" />

        <!-- Forgot Password Activity -->
        <activity android:name=".ui.ForgotPasswordActivity"
            android:exported="true"/>

        <!-- Dashboard Activity -->
        <activity android:name=".ui.Dashboard"
            android:exported="true"/>

        <!-- Front Page Activity -->
        <activity android:name=".ui.FrontPage"
            android:exported="true"/>

    </application>

</manifest>
