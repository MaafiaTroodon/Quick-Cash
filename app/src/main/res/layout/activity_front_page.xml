<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_front_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#CDDC39"
        android:backgroundTint="#CDDC39"
        android:fontFamily="sans-serif-medium"
        android:foregroundTint="#2196F3"
        android:outlineAmbientShadowColor="#3F51B5"
        android:outlineSpotShadowColor="#673AB7"
        android:shadowColor="#8BC34A"
        android:text="QuickCash"
        android:textColor="#033F5F"
        android:textColorHighlight="#C32C2C"
        android:textSize="60sp"
        android:textStyle="bold" />

</LinearLayout>
