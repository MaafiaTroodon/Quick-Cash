<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/userDashboardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="User Dashboard"
        android:textColorLink="#EB4444"
        app:layout_constraintTop_toBottomOf="@+id/employerDashboardButton"
        app:shapeAppearance="@style/CardView.Dark"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="130dp" />

    <Button
        android:id="@+id/employerDashboardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Employee Dashboard"
        android:textColorLink="#EB4444"
        app:layout_constraintTop_toBottomOf="@+id/adminDashboardButton"
        app:shapeAppearance="@style/CardView.Dark"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="114dp" />

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="170dp"
        android:background="#673AB7"
        android:backgroundTint="#673AB7"
        android:scaleX="5.0"
        android:scaleY="4.0"
        android:shadowColor="#9C27B0"
        android:text="QuickCash"
        android:textColor="#CDDC39"
        android:textColorLink="#CDDC39"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/LogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="572dp"
        android:background="@drawable/square_button"
        android:padding="10dp"
        android:text="Logout"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heading" />

    <Button
        android:id="@+id/adminDashboardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:text="Admin Dashboard"
        android:textColorLink="#EB4444"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        app:shapeAppearance="@style/CardView.Dark"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="124dp" />
    >
</androidx.constraintlayout.widget.ConstraintLayout>
